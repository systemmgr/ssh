# in this file, please see the Travis CI documentation.
# .travis.yml
# https://docs.travis-ci.com

sudo: enabled

install:
  - sudo bash -c "$(curl -LSs https://github.com/casjay-dotfiles/scripts/raw/main/install.sh)"
  - sudo pkmgr init
  - pkmgr update
  - sudo dotfiles admin scripts
  - sudo dotfiles admin ssh
  - bash -c "[ -f $(command -v ssh >/dev/null 2>&1) ] && timeout --signal=9 --foreground --preserve-status 5 ssh || true"

matrix:
  include:
    - os: linux
      dist: bionic
      language: bash
      sudo: enabled

notifications:
  email:
    on_failure: never
    on_success: never
